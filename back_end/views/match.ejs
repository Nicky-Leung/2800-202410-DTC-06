<%- include('templates/header') %>

    <body class="overflow-hidden bg-white">
        <div class="bg-baby-blue text-dark-blue text-center pt-5 pb-5 space-y-3">
            <h1 class="font-bold text-3xl inline ">
                <%= matchType %> <!-- might be 3v3, 4v4, 5v5 -->
                    <%= sport %> game <!-- might be whichever sport -->
            </h1>
            <br>

            <h1 class="font-bold text-3xl inline">
                location: <%= location %> <!-- location of match -->
            </h1>
            <br>
            <h1 class="font-bold text-4xl inline">Rank: <%= hostrank %>
                    <!-- rank of first player in home team which is (match creator) -->
            </h1>
            <div class="flex flex-row justify-center">
                <div class="pt-4 flex flex-col space-y-3 mr-3">
                    <button id="homePlus" class="text-white bg-sky-blue text-4xl px-3 py-3 rounded-full">+</button>
                    <button id="homeMinus" class="text-white text-4xl bg-dark-blue px-3 py-3 rounded-full">-</button>
                </div>
                <div style="font-size: 96px;" class="mt-4 pt-3 text-7xl">
                    <span id="home-score">0</span>-<span id="away-score">0</span>
                </div>
                <div class="pt-4 flex flex-col space-y-3 ml-3">
                    <button id="awayPlus" class="text-white bg-sky-blue text-4xl px-3 py-3 rounded-full">+</button>
                    <button id="awayMinus" class="text-white bg-dark-blue text-4xl px-3 py-3 rounded-full">-</button>
                </div>
            </div>
            <div id="countdown" class="text-6xl inline">60:00</div>
            <br>
            <h1 class="font-bold text-xl inline">Hosted by: <%= hostname %>
            </h1>
        </div>

        <div class="flex mt-5 flex-row justify-between">
            <div class="flex border border-sky-blue text-blue flex-col ml-4 py-2 px-3 rounded-lg w-6/12">
                <div class=" font-bold text-center text-2xl text-sky-blue">Home Team</div>
                <% homePlayers.forEach(player=> { %>
                    <div class="flex flex-row mt-2 bg-gray-200 px-2 py-1 rounded-full text-center w-44">
                        <img src="<%= player.profilePicture %>" alt="" class="w-9 h-9 rounded-full flex-shrink-0">
                        <div class="flex pt-2 flex-col pl-0.5">
                            <div class="text-base text-sky-blue">
                                <%= player.name.length> 12 ? player.name.substring(0, 12) + '...' : player.name %>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
            <div class="flex text-dark-blue  border border-dark-blue flex-col mr-4 py-2 px-3 rounded-lg w-6/12">
                <div class="text-center font-bold text-2xl">Away Team</div>
                <% awayPlayers.forEach(player=> { %>
                    <div class="flex flex-row mt-2 px-2 bg-gray-200  py-1 rounded-full text-center w-44">
                        <img src="<%= player.profilePicture %>" alt="" class="w-9 h-9 rounded-full flex-shrink-0">
                        <div class="flex pt-2 flex-col pl-0.5">
                            <div class="text-base">
                                <%= player.name.length> 12 ? player.name.substring(0, 12) + '...' : player.name %>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>

        <div class="mt-3 text-white font-bold flex flex-row justify-between">
            <div id="pause" class="bg-sky-blue ml-4 px-7 py-3 width-5/12 text-5xl rounded-lg">Pause</div>
            <form id="end-form" action="/updateelo" method="post">
                <input type="hidden" name="matchID" value="<%= matchID %>">
                <button id='end' type="submit"
                    class="bg-dark-blue mr-4 px-12 py-3 width-5/12 text-5xl rounded-lg">End</button>
            </form>
        </div>
        <input type="hidden" id="matchID" value="<%= matchID %>">

        <%- include('templates/footer') %>
    </body>
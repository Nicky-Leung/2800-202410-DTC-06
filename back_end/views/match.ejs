<%- include('templates/header') %>

    <body class="overflow-hidden bg-white">
        <div class="bg-baby-blue text-dark-blue text-center m-4 rounded-2xl">
            <br>
            <h1 class="font-bold text-3xl inline ">
                <%= sport.charAt(0).toUpperCase() + sport.slice(1) %>
                    <%= matchType%><!-- might be whichever sport -->
            </h1>
            <br>

            <h1 class="font-bold text-2xl inline">
                <%= location %> <!-- location of match -->
            </h1>


            <div class="flex flex-row justify-center">
                <div class="pt-4 flex flex-col space-y-3 mr-3">
                    <button id="homePlus" class="text-white bg-sky-blue text-4xl px-3 rounded-full">+</button>
                    <button id="homeMinus" class="text-white text-4xl bg-dark-blue px-3   rounded-full">-</button>
                </div>
                <div style="font-size: 96px;" class="mt-4  text-7xl">
                    <span id="home-score">0</span>-<span id="away-score">0</span>
                </div>
                <div class="pt-4 flex flex-col space-y-3 ml-3">
                    <button id="awayPlus" class="text-white bg-sky-blue text-4xl px-3 rounded-full">+</button>
                    <button id="awayMinus" class="text-white bg-dark-blue text-4xl px-3  rounded-full">-</button>
                </div>
            </div>
            <div id="countdown" class="text-6xl inline">60:00</div>
            <br>
            <br>
        </div>

        <div class="rounded-lg bg-baby-blue mx-5 border-2 shadow-lg">

            <div class="flex flex-row">

                <div class="flex justify-center items-center w-1/2">
                    <div class=" bg-sky-blue shadow-xl text-center text-white w-48 text-2xl p-2 m-5 rounded-lg">Home
                        Team
                    </div>
                </div>
                <div class=" flex justify-center items-center w-1/2">
                    <div class=" bg-sky-blue  shadow-xl text-center text-white w-48 text-2xl p-2 m-5 rounded-lg">Away
                        Team
                    </div>
                    </form>
                </div>
            </div>

            <div class="flex flex-row justify-center mx-1">
                <div id="firstTeam" class="flex space-y-2 flex-col ml-1 py-2 px-3 rounded-lg ">
                    <div class="">
                        <div class="space-y-4">
                            <% for (let i=0; i< homePlayers.length; i++) { %>
                                <div
                                    class="playerCards  bg-white shadow-lg flex flex-row border-2 px-1 py-1 rounded-full">
                                    <img src="<%= homePlayers[i].profilePicture %>"
                                        class="flex align-middle w-12 h-12 rounded-full">
                                    <div class="playerName text-xl p-3 flex flex-row">
                                        <div class="overflow-hidden w-20">
                                            <div class="truncate">
                                                <%= homePlayers[i].name %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <% }; %>
                        </div>
                    </div>
                </div>
                <div id="secondTeam" class="flex space-y-2 flex-col ml-1 py-2 px-3 rounded-lg w-6/12">
                    <div class="">
                        <div class="space-y-4">
                            <% for (let i=0; i< awayPlayers.length; i++) { %>
                                <div
                                    class="playerCards bg-white shadow-lg flex flex-row border-2 px-1 py-1 rounded-full">
                                    <img src="<%= awayPlayers[i].profilePicture %>"
                                        class="flex align-middle w-12 h-12 rounded-full">
                                    <div class="playerName text-xl p-3 flex flex-row">
                                        <div class="overflow-hidden w-20">
                                            <div class="truncate">
                                                <%= awayPlayers[i].name %>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <% }; %>
                        </div>
                    </div>
                </div>
            </div>




        </div>
        <div class="mt-3 mx-1 text-white font-bold flex flex-row justify-between">
            <div id="pause" class="bg-sky-blue ml-4 px-7 py-3 width-5/12 text-5xl rounded-lg">Pause</div>
            <form id="end-form" action="/updateelo" method="post">
                <input type="hidden" name="matchID" value="<%= matchID %>">
                <button id='end' type="submit"
                    class="bg-dark-blue mr-4 px-12 py-3 width-5/12 text-5xl rounded-lg">End</button>
            </form>
        </div>
        <input type="hidden" id="matchID" value="<%= matchID %>">
        <%- include('templates/footer') %>
    </body>
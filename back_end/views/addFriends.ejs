<%- include('templates/header') %>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">





  <body>
    <div class="container">
      <div class="row justify-content-center mt-2">
        <% users.forEach(user=> { %>
          <div class="col-12 col-md-6 col-lg-4 mb-3">
            <div class="card bg-sky-blue ">
              <div class="card-body bg-sky-blue d-flex align-items-center justify-content-between" style=" border-radius:
                10px">
                <div class="d-flex align-items-center">
                  <img src="<%= user.profilePicture %>" alt="Profile Picture" class="rounded-circle mr-3"
                    style="width: 50px; height: 50px;">
                  <h5 class="card-title mb-0">
                    <%= user.name %>
                  </h5>
                </div>
                <form action="/addFriends/unfriend" method="POST" style="display: inline;">
                  <input type="hidden" name="friendId" value="<%= user._id %>">
                  <button type="submit" class="btn btn-danger btn-sm">Unfriend</button>
                </form>
              </div>
            </div>
          </div>
          <% }); %>
      </div>
    </div>




    <!-- Include jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <!-- Include Bootstrap JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  </body>

  <%- include('templates/footer') %>
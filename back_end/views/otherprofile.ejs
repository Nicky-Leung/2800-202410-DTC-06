<%- include ('templates/header') %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <div class="d-flex flex-column align-items-center text-center mb-12 h-100 px-4">
        <div class="card-body d-flex flex-column align-items-center bg-sky-blue shadow-md p-5 rounded-b-3xl">
            <h1 class="text-4xl p-2 pt-0">
                <%= name %>
            </h1>
            <div class="relative w-[150px] h-[150px] mx-auto mb-7">
                <img src="<%= profilePicture %>" alt="pic goes here" class="w-full h-full rounded-full">

                <div
                    class="overlay-card absolute -bottom-6 left-1/2 -translate-x-1/2 bg-dark-blue border-2 p-[10px] border-black flex items-center justify-center text-center rounded-full rounded-[25%]">
                    <p style=" color:white" class="ranking text-lg">
                        <%= rank %>
                    </p>
                </div>
            </div>
            <p class="mmr mt-4 text-xl">MMR: <%= elo %>
            </p>
            <div id="rating" class="text-xl mb-3">
                <p>Sportsmanship: <%= sportsmanship %>/500</p>
            </div>
            <p class="lead text-lg">
                <%= bio %>
            </p>
            <% if (isFriend) { %>
                <p class="font-bold text-green-400">You are Friends with this user.</p>
                <button
                    class="border-2 p-2 rounded-lg text-lg mt-2 bg-red-600 border-red-600 text-white">Unfriend</button>
                <% } else { %>
                    <p class="font-bold text-red-600">You are NOT Friends with this user.</p>
                    <button class="border-2 p-2 rounded-lg text-lg mt-2 bg-green-400 border-green-400  text-white">Add
                        Friend</button>
                    <% } %>

        </div>


        <div id="match-history" class="text-2xl p-2">
            Match History:
            <%= matchHistory %>
        </div>
    </div>


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <%- include ('templates/footer') %>
        <script src="../public/scripts/footer.js"></script>
        <!-- this fixes footer. used express static on js for otherprofile-->